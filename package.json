{
  "name": "riyadh-travel-website",
  "version": "1.0.0",
  "description": "موقع مكتب رياض القحطاني للسفريات والسياحة والأيدي العاملة - Complete modern website with backend API, MongoDB database, WhatsApp integration, and email notifications",
  "main": "index.html",
  "scripts": {
    "setup": "cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "deploy": "npm run build && cd backend && npm run deploy",
    "seed": "cd backend && node ../database/seed.js",
    "start": "cd backend && npm start",
    "vercel:deploy": "cd frontend && vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abdabdahfa2002/riyadh-travel-website.git"
  },
  "keywords": [
    "travel",
    "tourism",
    "riyadh",
    "saudi-arabia",
    "website",
    "booking",
    "whatsapp",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": {
    "name": "MiniMax Agent",
